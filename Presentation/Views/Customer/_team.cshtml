@model List<Entities.Team>

@{
    ViewBag.Title = "_team";

}
<style>
    .image {
        object-fit: cover;
        width: 100px;
        height: 300px;
    }
</style>
<body class="sub_page">


    <!-- team section -->

    <div style="background-color:white">
        <section class="team_section layout_padding" style="color:black">
            <div class="container">
                <div class="heading_container heading_center">
                    <h2>
                        Our Main Team
                    </h2>

                </div>
                <div class="row">


                    @foreach (var tem in Model)
                    {

                        <div class="col-md-4 col-sm-6 mx-auto">
                            <div class="box">
                                <div class="img-box">
                                    <img  class="image" src="@Url.Action("GetImage", "Customer", new { id = tem.Id })" alt="@tem.ImageName" />
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        @tem.Name
                                    </h5>
                                    <h6 class="">
                                        @tem.Details
                                    </h6>
                                </div>
                            </div>
                        </div>
                    }



                </div>
            </div>
        </section>
    </div>

    <!-- end team section -->
</body>
